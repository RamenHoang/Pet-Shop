extends ../layouts/main.pug

block content
    .mt-4.ml-5.mr-5
        div
            h3 List Products
        table.table.mt-5
            thead
                tr
                    th(scope='col') #
                    th(scope='col') Name Products
                    th(scope='col') Quantity
                    th(scope='col') Created Time
                    th(scope='col') Action
            tbody
                - var index = 0;
                each product in products
                    tr
                        th(scope='row') #{++index}
                        td #{product.name}
                        td #{product.quantity}
                        td #{product.createdAt}
                        td
                            a.btn.btn-link(href=`/ad/stored-products/${product._id}/`) Update
                            a.btn.btn-link(href=`/ad/stored-products/${product._id}/delete` onclick="alert('Do you want to delete this product?')") Delete
                else
                    tr
                        td.text-center(colspan='5')
                            | Empty product list!