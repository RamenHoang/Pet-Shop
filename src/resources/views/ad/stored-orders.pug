extends ../layouts/main.pug

block content
    .mt-4.ml-5.mr-5
        .row
            .col-lg-12
                h3 List orders
            .col-lg-12
                table.table.mt-5
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Total price
                            th(scope='col') Order at
                            th(scope='col') Action
                    tbody
                        each order in orders
                            tr
                                th(scope='row')
                                    a.btn.btn-link(href=`/ad/stored-orders/${order._id}`)
                                        | #{order._id}
                                td #{order.total}
                                td #{order.createdAt}
                                td
                                    a.btn.btn-link(href=`/ad/stored-orders/${order._id}/delete` onclick="alert('Do you want to delete this order?')") Delete
                        else
                            tr
                                td.text-center(colspan='5')
                                    | Empty category list!
